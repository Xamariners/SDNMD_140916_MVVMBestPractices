<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMBestPractices.Controls.ToDoListItem" 
             Padding="10, 0, 10, 0">
  
  <Label Grid.Row="0" Grid.Column="0" Text="Pick up groceries" FontSize="15" LineBreakMode="TailTruncation" />
  <Label Grid.Row="1" Grid.Column="0" Text="if not you'll be sleeping in the couch as said by your wife" FontSize="9" />
  
  <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="-" />
  
<Grid.RowDefinitions>
  <RowDefinition Height="20" ></RowDefinition>
  <RowDefinition Height="*" ></RowDefinition>
</Grid.RowDefinitions>
  
<Grid.ColumnDefinitions>
  <ColumnDefinition Width="*" ></ColumnDefinition>
  <ColumnDefinition Width="40" ></ColumnDefinition>
</Grid.ColumnDefinitions>
</Grid>